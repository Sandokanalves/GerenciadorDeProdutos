@model Domain.Entities.Produto

@{
    ViewData["Title"] = "Adicionar Produto";
}

<div class="container mt-5">
    <h2 class="text-center">➕ Adicionar Novo Produto</h2>

    <form asp-action="Create" method="post" class="card shadow p-4">
        <div class="mb-3">
            <label class="form-label">Nome:</label>
            <input asp-for="Nome" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição:</label>
            <textarea asp-for="Descricao" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Preço:</label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Quantidade:</label>
            <input asp-for="QuantidadeEstoque" class="form-control" type="number" required>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅ Voltar</a>
            <button type="submit" class="btn btn-success">✔ Adicionar</button>
        </div>
    </form>
</div>
