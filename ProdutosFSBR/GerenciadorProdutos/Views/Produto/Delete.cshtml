@model Domain.Entities.Produto

@{
    ViewData["Title"] = "🗑️ Excluir Produto";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">🗑️ Excluir Produto</h2>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Erro"]
        </div>
    }

    <div class="card shadow-lg p-4 border-danger">
        <div class="card-body text-center">
            <h4 class="card-title fw-bold text-danger">⚠️ Tem certeza que deseja excluir este produto?</h4>
            <hr>
            <h5 class="fw-bold">@Model.Nome</h5>
            <p>@Model.Descricao</p>
            <p><strong>Preço:</strong> @Model.Preco.ToString("C")</p>
            <p><strong>Estoque:</strong> @Model.QuantidadeEstoque</p>

            <form asp-action="DeleteConfirmed" asp-controller="Produto" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-3">
                        ❌ Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        🗑️ Confirmar Exclusão
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
