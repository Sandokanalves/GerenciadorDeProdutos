@model Domain.Entities.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Tem certeza que deseja excluir este produto?</h2>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<div>
    <h4>@Model.Nome</h4>
    <p>@Model.Descricao</p>
    <p>Preço: @Model.Preco.ToString("C")</p>
    <p>Estoque: @Model.QuantidadeEstoque</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="Produto" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
