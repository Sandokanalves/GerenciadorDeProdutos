@model IEnumerable<Domain.Entities.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h2 class="text-center">Produtos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Adicionar Produto</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Descricao</td>
                <td>R$ @produto.Preco.ToString("F2")</td>
                <td>@produto.QuantidadeEstoque</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@produto.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
