<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerenciador de Produtos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciadorProdutos.styles.css" asp-append-version="true" />
    <style>
        /* Personalização do Menu */
        .navbar-custom {
            background: linear-gradient(90deg, #343a40, #007bff);
        }

            .navbar-custom .navbar-brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #fff !important;
                transition: 0.3s;
            }

                .navbar-custom .navbar-brand:hover {
                    transform: scale(1.1);
                }

            .navbar-custom .nav-link {
                color: #fff !important;
                font-size: 1.1rem;
                transition: 0.3s;
            }

                .navbar-custom .nav-link:hover {
                    color: #f8f9fa !important;
                    text-decoration: underline;
                }

        /* Estilização do rodapé */
        .footer-custom {
            background-color: #343a40;
            color: white;
            padding: 15px;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-controller="Produto" asp-action="Index">📦 Gerenciador de Produtos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" asp-action="Index">🏠 Início</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        &copy; 2025 - Gerenciador de Produtos
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
